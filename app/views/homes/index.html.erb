<!DOCTYPE html>
<html>
<head> 
  <title></title>
</head>
<body>
  <div class="container-fluid">
    <div class="row" style="padding-right:20px; padding-left:24px">
      <div class="col-12">
        <div class="row">
          <div class="col-12 main-div" style="background-image: url(/assets/img.jpg")><!-- mian outer div -->
            <div class="row">
              <div class="col-12" style="height: 100px">
                 <% if current_user.present? %>
                  <%= link_to 'logout', destroy_user_session_path, method: :delete, class: "btn btn-primary btn-md button1" %>
                  <% else %>
                    
                                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary btn-md" style="margin-top: 20px;" data-toggle="modal" data-target="#myModal">
                      Login
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <!--<div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel"></h4>
                          </div>-->
                          <div class="modal-body">
                            <div class="row" >
                              <div class="col-1"></div>
                              <div class="col-10" >
                                <h2>Sign In To Your Account</h2>

                                  <%= form_for(User.new, as: :user, url: session_path(:user)) do |f| %>

                                    <div class="field">
                                      <%= f.label :email %><br />
                                      <%= f.email_field :email,  autofocus: true, placeholder: "Email..", style: "padding: 5px 9px; width:90%;" %>
                                    </div>

                                    <div class="field">
                                      <%= f.label :password %><br />
                                      <%= f.password_field :password, autocomplete: "off", placeholder: "Password..", style: "padding: 5px 9px; width:90%"  %>
                                    </div>

                                    <div class="actions" style="margin-top: 15px;">
                                      <%= f.submit "Log in", style: "width:100px" %>
                                    </div>
                                  <% end %>
                                      </div>
                        <!--<div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>-->
                      </div>
                    </div>
                  </div>
                    <% end %>
                              </div>
                              <div class="col-1"></div>
                            </div>
                            
                
                              <!-- Button trigger modal -->
              <button type="button" class="btn btn-primary btn-md" style="margin-top: 20px;" data-toggle="modal" data-target="#myModal1">
                Signup
              </button>

              <!-- Modal -->
              <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel"></h4>
                    </div>
                    <div class="modal-body">
                      <div class="row">
                        <div class="col-2"></div>
                        <div class="col-8">
                          <h2>Create an account</h2>
                          <h4 style="margin-left: 15px">It's free and always will be.</h4>
                        <%= form_for(User.new, as: :user, url: registration_path(:user)) do |f| %>
                          
                          <div class="field">
                            <%= f.label :email %><br />
                            <%= f.email_field :email, autofocus: true, placeholder: "Email..", style: "padding: 5px 9px; width:89%;" %>
                          </div>

                          <div class="field">
                            <%= f.label :first_name %><br>
                            <%= f.text_field :first_name, placeholder: "first name..", style: "padding: 5px 9px; width:89%;" %>
                          </div>

                          <div class="field">
                            <%= f.label :last_name %><br>
                            <%= f.text_field :last_name, placeholder: "last name..", style: "padding: 5px 9px; width:90%;" %>
                          </div>

                          <div class="field">
                            <%= f.label :date_of_birth %><br>
                            <%= f.date_field :date_of_birth, placeholder: "DOB..", style: "padding: 4px 7px; width:90%;" %>
                          </div>

                          <div class="field">
                            <%= f.label :password %>
                            <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %><br />
                            <%= f.password_field :password, autocomplete: "off", placeholder: "password..", style: "padding: 5px 9px; width:90%;" %>
                          </div>

                          <div class="field">
                            <%= f.label :password_confirmation %><br />
                            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password..", style: "padding: 5px 9px; width:90%;" %>
                          </div>  

                          <div class="field">
                            <%= f.label :gender %><br>
                            <%= f.radio_button :gender, "male" %> Male
                            <%= f.radio_button :gender, "female" %> Female
                          </div> 
                          
                          <div class="field">
                            <%= f.label :language %><br>
                            <%= f.check_box "language",  id: "hindi" %> 
                            <%= f.label :hindi %>
                            <%= f.check_box "language",  id: "english" %> 
                            <%= f.label :english %>
                          </div>

                          <div class="actions">
                            <%= f.submit "Sign up" %>
                          </div>

                        <% end %>

                              </div>
                              <!--<div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                
                              </div>-->
                            </div>
                          </div>
                        </div>

                        </div>
                        <div class="col-2"></div>
                      </div>
                      

                <%= link_to "tags", categories_path, class: "btn pull-right btn btn-primary btn-sm button" %>
                <%= link_to 'music', songs_path, class: "btn pull-right btn btn-primary btn-sm button" %>
               
              </div>
            </div>

            <div class="row">
              <div class="col-3">
              </div>
              <div class="col-6">
                <h2 class="soundcloud">Connect on SoundCloud</h2>
                <h5 class="h5">Discover, stream, and share a constantly expanding mix of music </h5>
                <h5 class="h5">from emerging and major artists around the world. </h5>
                <div class="row">
                  <div class="col-4"></div>
                  <div class="col-4">
                    
                    <!--<%= link_to 'signup for free', new_user_registration_path, class: "btn btn-primary btn-sm", style: "margin-top: 15px;" %>-->


                                    <!-- Button trigger modal -->
              <button type="button" class="btn btn-primary btn-sm" style="margin-top: 20px;" data-toggle="modal" data-target="#myModal1">
                signup for free
              </button>

              <!-- Modal -->
              <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel"></h4>
                    </div>
                    <div class="modal-body">
                      <h2>Sign up</h2>
              <%= form_for(User.new, as: :user, url: registration_path(:user)) do |f| %>
                
                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true %>
                </div>

                <div class="field">
                  <%= f.label :first_name %><br>
                  <%= f.text_field :first_name %>
                </div>

                <div class="field">
                  <%= f.label :last_name %><br>
                  <%= f.text_field :last_name %>
                </div>

                <div class="field">
                  <%= f.label :date_of_birth %><br>
                  <%= f.date_field :date_of_birth %>
                </div>

                <div class="field">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off" %>
                </div>

                <div class="field">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off" %>
                </div>  

                <div class="field">
                  <%= f.label :gender %><br>
                  <%= f.radio_button :gender, "male" %> Male
                  <%= f.radio_button :gender, "female" %> Female
                </div> 
                
                <div class="field">
                  <%= f.label :language %><br>
                  <%= f.check_box "language",  id: "hindi" %> 
                  <%= f.label :hindi %>
                  <%= f.check_box "language",  id: "english" %> 
                  <%= f.label :english %>
                </div>

                <div class="actions">
                  <%= f.submit "Sign up" %>
                </div>

              <% end %>

                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      
                    </div>
                  </div>
                </div>
              </div>

                  </div>
                  <div class="col-4"></div>
                </div>
              </div>
              <div class="col-3">
              </div>
            </div>
          </div>
        </div> <!-- first div close -->

        <div class="row">  <!-- search div start -->
          <div class="col-2">
          </div>
          <div class="col-8">
            <div class="row">
                <div class="col-7">
                  <div class="input-group">
                    
                    <input type="text" class="form-control" placeholder="Search for artists,bands,tracks,podcats" style="background-color: #f5f2f2;">
                    <span class="input-group-btn">
                      <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                  </div>
                </div>
                <div class="col-1">
                  <span class="or" style="line-height: 2.4;"> or</span>
                </div>
                <div class="col-3"> 
                  <%= link_to "Upload your own", new_user_registration_path, class: "btn btn-secondary" %>
                </div>
              </div>
            </div>
            <div class="col-2">
            </div>
          </div>  <!-- search div close -->

        <div class="row top-buffer">  <!-- trendind div -->
          <div class="col-12" >
            <h3>Hear whatâ€™s trending for free in the SoundCloud community</h3>
          </div>
        </div>    <!-- trending div close -->

        <div class="row" style="margin-top: 30px; padding: 30px">
          <div class="col-12">
          <% @albums.each do |album| %>
            <div class="row" style="float:left; padding: 15px" >
              <div class="col-12">
                <tr>
                  <td><%= link_to image_tag(album.image.url(:thumb)), songs_path(album_id: album.id) %></td>
                </tr>
                </div>
            </div>
          <% end %>
          </div>
        </div>

          <!--     footer portion start -->
        <div class="row" style="background-color: #A9A9A9">
          <div class="col-12">
          
            <div class="row">
              <div class="col-12">
                <p class="footer"><b>Thanks for listening. Now join in.</b></p>
              </div>
            </div>

            <div class="row">
              <div class="col-12">
                <p class="footer1">Save tracks, follow artists and build playlists. All for free.
                  Create account</p>
              </div>
            </div>

            <div class="row" style="margin-top: 10px">
              <div class="col-5"></div>
              <div class="col-2">
                <%= link_to "Create account", new_user_registration_path,  class: "btn btn-primary btn-lg" %>
              </div>
              <div class="col-5"></div>
            </div>

            <div class="row" style="margin-top: 15px">
              <div class="col-4"></div>
              <div class="col-4">
                <div class="row">
                  <div class="col-10">
                    <p style="text-align: center;">Already have an Account?</p>
                  </div>
                  <div class="col-2" style="margin-left: -40px">
                    <%= button_to "Sign in", user_session_path,  class: "btn btn-outline-info" %>
                  </div>
                </div>
              </div>
              <div class="col-4"></div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>   <!-- container fluid div close -->
</body>
</html>
